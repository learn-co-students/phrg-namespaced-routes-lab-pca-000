<%= form_for preference do |f| %>
  How should artists be sorted? (Please type "ASC" or "DESC")<br>
  <%= f.text_field :artist_sort_order %><br>
  How should songs be sorted? (Please type "ASC" or "DESC")<br>
  <%= f.text_field :song_sort_order %><br>
  Allow creation of songs? <%= f.check_box :allow_create_songs %><br>
  Allow creation of artists? <%= f.check_box :allow_create_artists %><br>
  <%= f.submit %>
<% end %>
